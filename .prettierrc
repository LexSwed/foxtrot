{
  "singleQuote": true,
  "trailingComma": "none",
  "tabWidth": 2,
  "useTabs": false,
  "quoteProps": "consistent",
  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "printWidth": 140
      }
    },
    {
      "files": ".(*)rc",
      "options": { "parser": "json" }
    }
  ]
}
