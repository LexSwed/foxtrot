{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "skipLibCheck": false,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "rootDir": ".",
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "."
  }
}
