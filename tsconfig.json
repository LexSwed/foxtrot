{
  "exclude": ["node_modules"],
  "files": [],
  "compilerOptions": {
    "skipLibCheck": false,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "rootDir": ".",
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "composite": true
  },
  "references": [{ "path": "client" }, { "path": "server" }]
}
